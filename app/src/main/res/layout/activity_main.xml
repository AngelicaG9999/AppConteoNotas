<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffea"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/sicaulogo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="247dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="81dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:text="Cantidad de
        estudiantes a evaluar: "
/>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="120dp"
        android:layout_marginRight="126dp"
        android:ems="3"
        android:inputType="text"
        android:text="" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@id/editText1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="-1dp"
        android:ems="3"
        android:text="Guardar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="88dp"
        android:layout_marginRight="81dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="NOTAS ESTUDIANTE N°:" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="88dp"
        android:ems="2"
        android:inputType="text"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="76dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:text="Ingrese la nota n° 1: "/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="16dp"
        android:textColor="#FF0000"
        android:fontFamily="monospace"
        android:text="Nota: La menor calificación es 0.0 y la mayor calificación es 5.0"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="252dp"
        android:layout_marginTop="6dp"
        android:ems="3"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="23dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:text="Ingrese la nota n° 2:"/>

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="51dp"
        android:ems="3"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="32dp"
        android:fontFamily="monospace"
        android:textColor="#000000"
        android:text="Ingrese la nota n° 3:"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="12dp"
        android:ems="3"
        android:inputType="text"
        android:text=""
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="29dp"
        android:fontFamily="monospace"
        android:text="Ingrese la nota n° 4:" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_marginLeft="253dp"
        android:layout_marginTop="4dp"
        android:ems="3"
        android:inputType="text"
        android:text="" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="37dp"
        android:fontFamily="monospace"
        android:text="¿Desea calcular la nota definitiva?" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="226dp"
        android:text="Sí" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="206dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="149dp"
        android:text="No" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="119dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#48a259"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Calcular nota"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radioButton2"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="163dp"
        android:layout_marginTop="80dp"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="RESULTADOS" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="11dp"
        android:fontFamily="monospace"
        android:text="Cantidad de estudiantes que perdieron:" />

    <EditText
        android:id="@+id/editTextText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="338dp"
        android:layout_marginTop="-9dp"
        android:ems="3"
        android:inputType="text"
        android:text="" />


</RelativeLayout>